													img(class="icon" src='https://s3.amazonaws.com/ec-digest-email-creatives/Group-1-contact.png')
													h3.primary-color #{data.updatedContact}
													p Updated Existing
					tr
						td.last-row
							table.three-column
								tr
									td.section
										table
											tr
												td.td-padding
