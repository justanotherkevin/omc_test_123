						td.section.td-padding
							table.last
								tr.content
									td.td-padding
										img(class='icon' src='https://s3.amazonaws.com/ec-digest-email-creatives/Group-2-mailbox.png')
									td
										h3.primary-color #{data.monthlyIncrease}% increase
